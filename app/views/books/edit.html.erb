<h1>Editing Book</h1>

<%= form_with model: @book, url: Book.find(params[:id]), method: :patch do |f| %>


    <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <p>
      <%= link_to 'Show',  Book.find(params[:id]) %>
      <a class="back" href="/books">Back</a>
  </p>
<%end%>